<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_message_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_profile_image_from"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/dark_green"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:id="@+id/tv_message_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:padding="12dp"
            android:text="This is my message 000000000000000000000000000000000"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_time_sent_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:text="@string/hello"
        android:textColor="@color/secondary_text_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_message_from"
        app:layout_constraintStart_toEndOf="@+id/cv_message_from"
        app:layout_constraintTop_toTopOf="@+id/cv_message_from"
        app:layout_constraintVertical_bias="0.838"
        android:layout_marginStart="4dp">

    </TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_image_from"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_nav_user"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_message_from"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cv_message_from" />
</androidx.constraintlayout.widget.ConstraintLayout>