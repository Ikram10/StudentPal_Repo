<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudentPal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">@color/black</item>
        <item name="actionBarStyle" >@drawable/ic_round_arrow_back_24</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>
    app:boxCornerRadiusTopStart="10dp"
    app:boxCornerRadiusBottomEnd="10dp"
    app:boxCornerRadiusBottomStart="10dp"
    app:boxCornerRadiusTopEnd="10dp"
    android:textColorHint="@color/secondary_text_color"
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowActionBar">false</item>


    </style>
    <style name="TextInputLayoutTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="hintTextColor">@color/logo_text_color</item>
        <item name="boxStrokeColor">@color/logo_text_color</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/bg_color</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="android:textColorHint">@color/secondary_text_color</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="hintTextAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="elevation">3dp</item>

    </style>

    <style name="SearchBar" parent="@style/Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimaryDark" >@color/logo_text_color</item>
    </style>




</resources>